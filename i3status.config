# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = false
        interval = 2
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
}

#order += "ipv4"
order += "cpu_usage"
order += "memory"
#order += "disk /"
#order += "disk /home"
order += "wireless wlp60s0"
#order += "ethernet _first_"
order += "battery all"
#order += "load"
order += "tztime local"
order += "volume master"

cpu_usage {
        format = " cpu  %usage "
}

volume master {
                   format = "♪: %volume"
                   format_muted = "♪: muted (%volume)"
                   device = "default"
                   mixer = "Master"
                   mixer_idx = 0
           }
load {
        format = " load %1min "
        # max_threshold = 0.3
}

disk "/" {
        # format = " hdd %avail "
        format = " ⛁ %avail "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " lan: %ip %speed "
        format_down = " no lan "
}

wireless wlp60s0 {
                   format_up = " %essid @ %bitrate | %ip "
                   format_down = "W: down"
           }

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = ""
        status_chr = "⚡"
        # status_bat = "bat"
         status_bat = "☉"
        #status_bat = ""
        # status_unk = "?"
        status_unk = ""
        # status_full = ""
        #status_full = "☻"
        low_threshold = 15
        threshold_type = time
}

memory {
        format = " %used / %total "
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %d.%m. %H:%M "
}
